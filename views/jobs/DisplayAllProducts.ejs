<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
    <script src="https://use.fontawesome.com/39ac5a0cbe.js"></script>
    <link rel="stylesheet" href="../css/style.css" />
    <script src="../js/main.js"></script>

    <meta charset="UTF-8" />
    <title>Search Product</title>
</head>

<body>
    <header class="mb-6">
        <nav class="navbar-dark navbar-expand-lg navbar bg-dark">
            <div class="container container-fluid">
                <div class="navbar-brand">
                    <h1 class="display-5 text-white"><a class="text-white" href="/home">E-Shop</a></h1>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/home">Home</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/home">Register</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/products/display">View Products</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row text-center">
            <h2 class="mb-5 mt-5 display-4">
                <i class="fa fa-list"></i> &nbsp;List of all Available Products
            </h2>

            <input type="text" id="myInput" onkeyup="searchProductsTable()" placeholder="Search for Products..."
                title="Type in a name" />

            <table id="myTable" class="table table-striped table-dark rounded" data-sortable="true">
                <thead class="rounded-top" id="headrow">
                    <tr>
                        <th onclick="sortTable(0)" class="border-0" style="background-color: #457b9d;">
                            Product Name <i class="fa fa-sort mt-1 ml-2"></i>
                        </th>
                        <th onclick="sortTable(1)" class="border-0" style="background-color: #457b9d;">
                            Price Each <i class="fa fa-sort mt-1 ml-2"></i>
                        </th>
                        <th onclick="sortTable(2)" class="border-0" style="background-color: #457b9d;"></th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((product, index)=>{ %>
                    <tr>
                        <td>
                            <%= product.title %>
                        </td>
                        <td>
                            <%= product.price %>
                        </td>
                        <td><a href="/products/placeorder?productName=<%=product.title%>&productPrice=<%=product.price%>"
                                class="button1">Order</a></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>